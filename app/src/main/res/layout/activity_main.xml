<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.electromatt.singlescreenapp.MainActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/imageView1"
        android:src="@drawable/pizza"
        android:scaleType="centerCrop" />

    <TextView
        android:text="Matt&apos;s Pizzaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="8dp">
        <ImageView
            android:src="@drawable/ic_place_black_24dp"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:id="@+id/imageView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="123 Fake Street Houston, TX 77095"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_local_pizza_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open: 9am - 10pm"
            android:layout_marginLeft="50dp"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_local_phone_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call: 555-555-5555"
            android:layout_marginLeft="50dp"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>
